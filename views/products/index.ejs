<!DOCTYPE html>
<html>
  <head>
    <title>Lista de Produtos</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/products/create">Novo</a></h3>
      <h1>Lista de Produtos</h1>
      <% if(products.length>0) { %>
      <table class="list-table", border="1">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Produto</th>
            <!--<th>Endereço</th>-->
          </tr>
        </thead>
        <tbody>

          <% for(var i=0; i<products.length;i++) { %>
            <tr>
              <td><a href="/products/show/<%= products[i]._id%>"><%= products[i].name%></a></td>
              <td><%= products[i].productid%></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>Não há produtos cadastrados.</div>
      <% } %>
    </div>
  </body>
</html>
